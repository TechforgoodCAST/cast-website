%section#portfolio.section
  .container.section-center.center
    %h2.section-title
      %span Nonprofit Teams

    %h3.subtitle
      %span Current

    .portfolio-isotope.row{style: "max-width: #{285 * data.teams.teams.select { |t| !t.graduate? }.count}px"}
      - data.teams.teams.select { |t| !t.graduate? }.each do |team|
        %article.post.col-md-6.col-sm-6.col-xs-6.portfolio-item
          .entry-thumbnail
            = image_tag team.logo
            %h4.fuseTeamText= team.name
            %h5.fuseTeamText= team.tagline

    %h3.subtitle
      %span Graduates

    .portfolio-isotope.row{style: "max-width: #{285 * data.teams.teams.select(&:graduate).count}px"}
      - data.teams.teams.each do |team|
        - if team.graduate? && team.has_description
          %article.post.col-md-3.col-sm-6.col-xs-6.portfolio-item
            .entry-thumbnail
              %a.hover-effectFuse{"data-target" => "##{team.name.downcase.gsub(' ', '-')}", "data-toggle" => "modal"}
                = image_tag team.logo
                %span.overlay
                  %i.fa.fa-plus
                %h4.fuseTeamText= team.name
                %h5.fuseTeamText= team.tagline

          .modal.fade{"aria-hidden": "true", "aria-labelledby": "project-modal1-label", :role => "dialog", :tabindex => "-1", :id => team.name.downcase.gsub(' ', '-')}
            .modal-dialog
              .modal-content
                .modal-header
                  %button.close{"aria-hidden": "true", "data-dismiss" => "modal", :type => "button"} Ã—
                  %h4#project-modal-label.modal-title= team.name
                .modal-body
                  %article.single-project
                    .project-thumbnail
                      .item.active
                        = image_tag team.image
                    .row
                      .col-md-12
                        - team.description.each do |para|
                          %p= para

    .portfolio-isotope.row{style: "max-width: #{285 * data.teams.teams.select(&:graduate).count}px"}
      %div.col-md-10.col-md-offset-1
        %div.row
          - data.teams.teams.select { |t| t.graduate? && !t.has_description }.each do |team|
            %article.post.col-md-4.col-sm-6.col-xs-6.portfolio-item
              .entry-thumbnail
                = image_tag team.logo
                %h4.fuseTeamText= team.name
                %h5.fuseTeamText= team.tagline
