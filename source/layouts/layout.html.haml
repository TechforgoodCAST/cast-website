      })(window, document, '_gscq','script','//widgets.getsitecontrol.com/70641/script.js');

  %body
    = yield

  = partial 'layouts/footer'

  = javascript_include_tag 'jquery-1.12.1.js'
  = javascript_include_tag 'bootstrap-3.1.1.min.js'
