      = stylesheet_link_tag "//cdn.jsdelivr.net/alertifyjs/1.8.0/css/themes/default.min.css"
      = javascript_include_tag '//cdn.jsdelivr.net/alertifyjs/1.8.0/alertify.min.js'
    - else
      %link{href: "/favicon.ico", rel: "shortcut icon"}
      %link{href: "/favicon.ico", rel: "icon"}

    -# = stylesheet_link_tag :template
    -# = stylesheet_link_tag :site
    = stylesheet_link_tag :style
    = stylesheet_link_tag "//cdn-images.mailchimp.com/embedcode/classic-10_7.css"
    = stylesheet_link_tag "//cdn-images.mailchimp.com/embedcode/classic-10_7.css"

