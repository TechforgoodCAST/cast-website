%section#team.tc.bg-light-gray.pv3
  = partial '/components/section_header', :locals => { :title => "Our Team" }

  .cf.tc.center.mw8.flex.flex-wrap
    - data.people.team.select(&:cast&&:first_row).each do |person|
      .w-50.w-16-m.fl.dib.pa3.hide-child.relative
        .w-100.h-100.absolute.child.bg-light-red.top-0.left-0.br3.bg-animate.flex.items-center.justify-center.transition-300
          %span.child.t-all.ease.slide-up
            %i.fa.fa-linkedin-square.white
        = link_to person.linkedin, class: 'mid-gray', target: '_blank' do
          = image_tag person.image, class: 'br3'
          %h4= person.name
          %h5= person.role
          %h6.fw4= person.description


  .cf.tc.center.mw6
    - data.people.team.select(&:cast&&:second_row).each do |person|
      .w-50.w-33-m.fl.dib.pa3.hide-child.relative
        .w-100.h-100.absolute.child.bg-light-red.top-0.left-0.br3.bg-animate.flex.items-center.justify-center.transition-300
          %span.child.t-all.ease.slide-up
            %i.fa.fa-linkedin-square.white
        = link_to person.linkedin, class: 'mid-gray', target: '_blank' do
          = image_tag person.image, class: 'br3'
          %h4= person.name
          %h5= person.role
          %h6.fw4= person.description
