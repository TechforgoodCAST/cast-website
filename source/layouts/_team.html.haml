%section#team.section.section-center.section-hilite.section-team
  .container
    %h2.section-title
      %span Our Team

    .row.portfolio-isotope

      - data.people.team.select(&:cast&&:first_row).each_with_index do |person, index|
        .portfolio-item.col-md-2.col-sm-4.col-xs-6
          = link_to person.linkedin, class: 'hover-effect', target: '_blank' do
            = image_tag person.image
            %span.overlay
              %i.fa.fa-linkedin-square
            %h4= person.name
            %h5= person.role
            %h6= person.description


    .row.portfolio-isotope

      - data.people.team.select(&:cast&&:second_row).each_with_index do |person, index|
        -if index == 0
          .portfolio-item.col-md-2.col-sm-4.col-xs-6.col-md-offset-3
            = link_to person.linkedin, class: 'hover-effect', target: '_blank' do
              = image_tag person.image
              %span.overlay
                %i.fa.fa-linkedin-square
              %h4= person.name
              %h5= person.role
              %h6= person.description
        - else
          .portfolio-item.col-md-2.col-sm-4.col-xs-6
            = link_to person.linkedin, class: 'hover-effect', target: '_blank' do
              = image_tag person.image
              %span.overlay
                %i.fa.fa-linkedin-square
              %h4= person.name
              %h5= person.role
              %h6= person.description
