%section#clients.section.section-our-clients
  .container
    %h2.section-title
      %span Clients and Supporters
      %br
    .row
      - data.partners.partners.select { |partner| partner.role == 'cast' }.first(6).each do |partner|
        .col-md-2.col-sm-3.col-xs-6
          %a= image_tag partner.image

    .row
      - data.partners.partners.select { |partner| partner.role == 'cast' }.last(6).each_with_index do |partner, index|
        .col-md-2.col-sm-3.col-xs-6{ class: ('clients-bottom-row' if index < 1) }
          %a= image_tag partner.image
